@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>
<table id="table" class="table" data-pagination="true" data-toggle="table" data-total-field="count">
  <thead>
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.documentos.Descripcion)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.clientes.Nombre)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.documentos.Id)
      </th>
      <th></th>
      <th></th>
    </tr>
  </thead>


  <tbody>
    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.documentos.Descripcion)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.clientes.Nombre)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.documentos.ClienteId)
        </td>
        <td>
          @Html.ActionLink("Edit", "Edit", new { id = item.documentos.Id }) |
          @Html.ActionLink("DetailsDocumento", "Details", new { id = item.documentos.Id }) |
          @Html.ActionLink("Delete", "Delete", new { id = item.documentos.Id })
          @*@Html.ActionLink("Details", "Details", new { id = item.clientes.Id })*@
        </td>
        <td>
          <input type="button" class="btn btn-primary" type="submit" title="Details" value="Cliente" onclick="location.href='@Url.Action("Details", "Clientes", new { id = item.documentos.ClienteId })'" />

        </td>
      </tr>
    }
  </tbody>

</table>

